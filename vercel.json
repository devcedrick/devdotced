{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "src/styles/*.css",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/src/styles/(.*)",
      "dest": "/src/styles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}